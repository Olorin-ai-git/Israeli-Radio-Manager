# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=israeli_radio

# Google APIs
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_drive_folder_id_here

# Claude AI (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (VAPID keys)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_CLAIMS_EMAIL=admin@yourradio.com

# Notifications
ADMIN_EMAIL=admin@yourradio.com
ADMIN_PHONE=+1234567890

# App Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
CACHE_DIR=./cache
MAX_CACHE_SIZE_GB=10

# Agent Settings
AGENT_MODE=prompt
AUTO_CATEGORIZE_THRESHOLD=0.8
COMMERCIAL_INTERVAL_MINUTES=15
MAX_SONG_REPEAT_HOURS=4
